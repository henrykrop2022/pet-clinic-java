pipeline {
    agent any
    
    stages {
        stage('checkserver') {
            agent {label 'ubuntu'}
            steps {
                sh 'echo "Checking server status"'  // Fixed missing closing quote
                sh 'whoami'
                sh 'cat /etc/*release'
            }
        }

        stage('mvn') {
            agent {docker {image 'maven:3.9.9-amazoncorretto-8-debian'}}
            steps {
                    sh 'mvn --version'
                    // sh 'touch $BUILD_ID.$(date)'  // Fixed unmatched parentheses
                
            }
        }
    }
}
