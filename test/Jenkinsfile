    stages {
        stage('checkserver') {
            agent { label 'ubuntu' }
            steps {
                sh 'whoami'
                sh 'cat /etc/os-release'
            }
        }
        stage('maven') {
            agent {
                docker {
                    image 'maven:3.9.9-amazoncorretto-8-debian'
                    label 'ubuntu'
                }
            }
            steps {
                sh 'mvn --version'
            }
        }
    }
